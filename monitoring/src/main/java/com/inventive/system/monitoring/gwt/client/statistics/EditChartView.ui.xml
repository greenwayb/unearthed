<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>

        .left {
            float: left;
        }

        .leftPanel {
            width: 200px;
        }

        .list {
            width: 98%;
        }

    </ui:style>

    <g:HTMLPanel ui:field="rootPanel">

        <div>
            <g:Label text="Chart Title:" addStyleNames="{style.left} {style.leftPanel}"/>
            <g:TextBox ui:field="titleTextBox" addStyleNames="{style.left}" text="HeapMemoryUsage"/>
        </div>
        <g:Button ui:field="addButton" text="Add" />
        <g:Button ui:field="removeButton" text="Remove" />
        <div>
            <g:Label text="Properties"/>
        </div>
        <div>
            <g:ListBox ui:field="propertiesListBox" addStyleNames="{style.list}" />
        </div>
        <g:Button ui:field="okButton" text="OK" />
        <g:Button ui:field="cancelButton" text="Cancel" />
    </g:HTMLPanel>
</ui:UiBinder>